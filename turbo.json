{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["@repo/config-typescript", "@repo/env", ".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["NODE_ENV"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build", "@repo/env#build"],
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "setup": {
      "dependsOn": ["^setup"]
    }
  },
  "ui": "stream"
}

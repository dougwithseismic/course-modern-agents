{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["@repo/config-typescript", ".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "type-check"],
      "env": [
        "NODE_ENV",
        "SUPABASE_SERVICE_ROLE_KEY",
        "STRIPE_SECRET_KEY",
        "SUPABASE_AUTH_GOOGLE_CLIENT_ID",
        "SUPABASE_AUTH_GOOGLE_SECRET",
        "SUPABASE_URL"
      ],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.css",
        "package.json",
        "tsconfig.json",
        ".env*"
      ],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "dev": {
      "cache": false,
      "env": ["NODE_ENV", "SUPABASE_URL", "SUPABASE_ANON_KEY"],
      "persistent": true
    },
    "lint": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "src/**/*.js", ".eslintrc.*", "package.json"],
      "outputs": []
    },
    "setup": {
      "dependsOn": ["^setup"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx", "package.json"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "tsconfig.json"],
      "outputs": []
    }
  },
  "ui": "tui"
}
